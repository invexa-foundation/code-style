{
    "name": "@invexa/code-style",
    "type": "module",
    "version": "0.2.0",
    "description": "üìè Invexa code-style: Unified ESLint & Prettier configs for React, Next.js & Nest.js projects",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/invexa-foundation/code-style.git"
    },
    "typesVersions": {
        "*": {
            "prettier/general": [
                "src/prettier/general.d.ts"
            ],
            "prettier/tailwind": [
                "src/prettier/tailwind.d.ts"
            ]
        }
    },
    "main": "./src/index.cjs",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./src/index.cjs"
        },
        "./prettier": "./src/prettier/general.cjs",
        "./prettier/general": {
            "import": "./src/prettier/general.cjs",
            "types": "./src/prettier/general.d.ts",
            "require": "./src/prettier/general.cjs"
        },
        "./prettier/tailwind": {
            "import": "./src/prettier/tailwind.cjs",
            "types": "./src/prettier/tailwind.d.ts",
            "require": "./src/prettier/tailwind.cjs"
        },
        "./types": {
            "types": "./src/types.d.ts"
        }
    },
    "files": [
        "src"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 0",
        "release": "np --no-release-draft",
        "release:preview": "np prerelease --any-branch --no-release-draft --tag=preview"
    },
    "keywords": [],
    "author": "Invexa <dev@invexa.io>",
    "license": "UNLICENSED",
    "dependencies": {
        "@eslint/js": "^9.21.0",
        "eslint": "^9.21.0",
        "globals": "^16.0.0",
        "prettier": "^3.5.2",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "typescript-eslint": "^8.25.0"
    },
    "devDependencies": {
        "np": "^10.2.0",
        "typescript": "^5.7.3"
    }
}
